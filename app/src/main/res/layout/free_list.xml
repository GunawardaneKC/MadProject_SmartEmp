<?xml version="1.0" encoding="UTF-8" ?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:backgroundTint="@color/LBlue"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/recTwrgwe"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/recImage"
            android:text="First Name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_firstname"
            android:layout_width="202dp"
            android:layout_height="30dp"
            android:layout_marginStart="99dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Language"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recImage1"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/docemfrwr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/recImage1"
            android:text="Last Name"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lastname"
            android:layout_width="204dp"
            android:layout_height="32dp"
            android:layout_marginStart="99dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recImage1"
            android:text="Language"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recImage2"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/docwrg"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/recImage2"
            android:text="Phone"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="208dp"
            android:layout_height="32dp"
            android:layout_marginStart="99dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recImage2"
            android:text="Language"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recImage4"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/docwrgasas"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/recImage4"
            android:text="Skills"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/docaddress"
            android:layout_width="206dp"
            android:layout_height="34dp"
            android:layout_marginStart="101dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recImage4"
            android:text="Language"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recImage3"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/recImage3"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_skills"
            android:layout_width="204dp"
            android:layout_height="32dp"
            android:layout_marginStart="103dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recImage3"
            android:text="Language"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>